<h3>List of Parties</h3>

<div class="row">
  <form class="" action="/new" method="get">
    <input class="col s8 offset-s2 m2 offset-m5 l2 offset-l5" type="submit" value="Add A Party">
  </form>
</div>

<div class="row">
  <% counter = 0 %>
  <% @parties.each do |party| %>
    <% unless party.has_paid %>
      <a class="col s6 offset-s3 m4 l4 card-panel hoverable" href="/<%= party.id %>">
        <h5>Table #<%= party.table_id %></h5>
        Party #<%= party.id %>
        <br />
        Server: <%= party.server.name %>
        <br />
        <%= party.num_of_customers %> Customers
        <br />
        <% if party.has_paid %>
          Paid
        <% else %>
          Not paid
        <% end %>
        <br />
        $<%= sprintf("%.2f", party.tab) %>
      </a>
      <% counter += 4 %>
      <% if counter % 12 === 0 %>
        </div><div class="row">
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="row">
  <form class="" action="/all" method="get">
    <input class="col s8 offset-s2 m2 offset-m5 l2 offset-l5" type="submit" value="All Parties">
  </form>
</div>
