<h2>List of Parties</h2>

<div class="row">
  <form class="" action="/" method="get">
    <input type="submit" value="Back to Main">
  </form>
</div>

<div class="row">
  <form class="" action="/parties/new" method="get">
    <input type="submit" value="Add A Party">
  </form>
</div>

<div class="row">
  <% counter = 0 %>
  <% @parties.each do |party| %>

    <a class="col s4 card-panel hoverable" href="/parties/<%= party.id %>">
      <h5>Party #<%= party.id %></h5>
      <h6>Server: <%= party.server.name %></h6>
      <br />
      <%= party.num_of_customers %> Customers
      <br />
      <% if party.has_paid %>
        Has paid
      <% else %>
        Has not paid
      <% end %>
      <br />
      $<%= sprintf("%.2f", party.tab) %>
    </a>
    <% counter += 4 %>
    <% if counter % 12 === 0 %>
      </div><div class="row">
    <%end %>
  <% end %>
</div>
