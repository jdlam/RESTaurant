<h2>Servers</h2>

<div class="row">
  <form class="" action="/admin" method="get">
    <input type="submit" value="Back to Admin">
  </form>
</div>

<div class="row">
  <form class="" action="/admin/servers/new" method="get">
    <input type="submit" value="Add a Server">
  </form>
</div>

<div class="row">
  <% counter = 0 %>
  <% @servers.each do |server| %>

    <a class="col s4 card-panel hoverable" href="/admin/servers/<%= server.id %>">
      <h5><%= server.name %></h5>
    </a>
    <% counter += 4 %>
    <% if counter % 12 === 0 %>
      </div><div class="row">
    <%end %>
  <% end %>
</div>
